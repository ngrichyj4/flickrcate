/* do not group these rules */
*::-webkit-input-placeholder {
    color: rgb(182, 192, 207);
}
*:-moz-placeholder {
    /* FF 4-18 */
    color: rgb(182, 192, 207);
}
*::-moz-placeholder {
    /* FF 19+ */
    color: rgb(182, 192, 207);
}
*:-ms-input-placeholder {
    /* IE 10+ */
    color: rgb(182, 192, 207);
}

#pageless-loader > img {
  width: 5% !important;
}